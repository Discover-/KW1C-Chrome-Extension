{
  "name": "KW1C Chrome Extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "An extension to save the passwords of the N@Tschool and Portaal pages on KW1C.nl.",
  "homepage_url": "http://www.jasper-rietrae.com/",
  "icons":
  {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background":
  {
    "scripts":
	[
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "content_scripts":
  [
   {
     "matches": ["https://hetportaal.kw1c.nl/*", "https://natschool.kw1c.nl/*"],
     "js": ["/src/bg/cs.js"]
   }
  ],
  "permissions": [
    "https://hetportaal.kw1c.nl/*",
	"https://natschool.kw1c.nl/*",
	"storage"
  ],
  "options_page": "src/options_custom/index.html"
}

